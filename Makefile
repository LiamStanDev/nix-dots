.PHONY: check
check:
	@echo "ðŸ”„ Flake check..."
	@git add .
	@nix flake check

.PHONY: upgrade
upgrade:
	@echo "ðŸ”„ Full upgrading..."
	@git add .
	@sudo nix run .#switch 
	@make link


.PHONY: update
update:
	@echo "ðŸ”„ Flake channel updating..."
	@git add .
	@nix flake update

.PHONY: clean
clean:
	@echo "ðŸ§¹ Cleaning..."
	@nix-collect-garbage -d

.PHONY: link
link:
	@echo "ðŸ“¦ Link Config..."
	@cd dots && make
	@echo "âœ… Config files linked successfully"

.PHONY: unlink
unlink:
	@echo "ðŸ“¦ Unlink Config..."
	@cd dots && make unlink
	@echo "âœ… Config files unliked successfully"



.PHONY: install
install:
	@./scripts/install

.PHONY: uninstall
uninstall:
	@./scripts/uninstall
